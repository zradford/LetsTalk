<h1>Welcome!</h1>
<p>Let's Start by choosing a few Regions to join</p>
<form id="setRegions" onsubmit="newRegions()">
   <select id="country">
   {{#optionFiller regions}}
         <option id="region_{{region_id}}" value="{{region_id}}">{{region_name}}</option>
      {{/optionFiller}}
   </select>

   <select id="state">
   {{#optionFiller regions}}
         <option id="region_{{region_id}}" value="{{region_id}}">{{region_name}}</option>
   {{/optionFiller}}
   </select>
   
   <select id="city">
   {{#optionFiller regions}}
         <option id="region_{{region_id}}" value="{{region_id}}">{{region_name}}</option>
   {{/optionFiller}}
   </select>
   <input type="submit">
</form>