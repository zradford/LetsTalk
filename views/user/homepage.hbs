<link rel="stylesheet" href="stylesheets/home.css">
<script src="/js/homepage.js"></script>

<main>
   <div class="sidebar">
      <div><a> Home</a></div>
      {{!-- <div><a href="/settings">Settings</a></div> --}}
      <div><a href="/logout">Log Out</a></div>
   </div>
   <div class="content">
      <div class="feed">
         {{#if myTopics}}
         <div class="createNew">
            <form>
            <input type="text" id="newTopic" placeholder="topic name">
            <textarea id="desc" placeholder="Description"></textarea>
            <select id="region">
               {{#optionFiller regions}}
               <option value="{{region_id}}">{{region_name}}</option>
               {{/optionFiller}}
            </select>
            <button type="submit" onclick="postNewTopic()">Post</button>
            </form>
         </div>
         {{#listTopics myTopics}}
         <div class="topic">
            <h2>{{topic_name}}</h2>
            <span>{{description}}</span><span style="float:right">{{region_name}}</span>
         </div>
         {{/listTopics}}
         {{else}}
            {{> newUser}}
         {{/if}}
      </div>
      <div class="yours">
         <span class="title">My Topics</span>
         {{#if user_posts}}
            {{#listTopics user_posts}}
            <div class="myPosts">
               <h4>{{topic_name}}</h4>
               <span style="float:right">{{region_name}}</span>
            </div>
            {{/listTopics}}
         {{else}}
            Create a new Topic to see it here!
         {{/if}}
      </div>
   </div>
</main>